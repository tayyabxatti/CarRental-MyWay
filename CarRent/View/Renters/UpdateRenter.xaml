<Window x:Class="CarRent.View.Renters.UpdateRenter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRent.View.Renters"
        mc:Ignorable="d"
        Title="UpdateRenter" Height="450" Width="800">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--ClientsName-->
            <TextBlock Grid.Column="0" Grid.Row="0" Text="Client Name" />
            <TextBox x:Name = "tbClientName" Grid.Row="0" Grid.Column="1" />
            <!--ClientsName-->
            <TextBlock Grid.Column="0" Grid.Row="2" Text="ClientPickUpAddress" />
            <TextBox x:Name = "tbClientPickUpAddress" Grid.Row="2" Grid.Column="1" />
            <!--ClientsName-->
            <TextBlock Grid.Column="0" Grid.Row="3" Text="ClientContactNo" />
            <TextBox x:Name = "tbClientContactNo" Grid.Row="3" Grid.Column="1" />
            <!--ClientsName-->
            <TextBlock Grid.Column="0" Grid.Row="4" Text="ClientCompanyName" />
            <TextBox x:Name = "tbClientCompanyName" Grid.Row="4" Grid.Column="1" />
            <!--Add Button-->
            <Button x:Name="btnUpdate" Grid.Row="6" Content="Add Client" Click="BtnUpdate_Click" Grid.ColumnSpan="2" Margin="203,5,193,-5" />
        </Grid>
    </StackPanel>
</Window>
